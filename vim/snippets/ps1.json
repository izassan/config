{
    "GetHttpRequest": {
        "prefix": ["getreq"],
        "description": "invoke request get method",
        "body": [
            "\\$${1:resp} = Invoke-WebRequest -Method Get -Uri $2 -SkipHttpErrorCheck$3",
            "$0"
        ]
    },
    "PostHttpRequest": {
        "prefix": ["postreq"],
        "description": "invoke request post method",
        "body": [
            "\\$${1:resp} = Invoke-WebRequest -Method Post -Uri $2 -SkipHttpErrorCheck -Body $4",
            "$0"
        ]
    },
    "PutHttpRequest": {
        "prefix": ["putreq"],
        "description": "invoke request put method",
        "body": [
            "\\$${1:resp} = Invoke-WebRequest -Method Put -Uri $2 -SkipHttpErrorCheck -Body $4",
            "$0"
        ]
    },
    "DeleteHttpRequest": {
        "prefix": ["deletereq"],
        "description": "invoke request delete method",
        "body": [
            "\\$${1:resp} = Invoke-WebRequest -Method Delete -Uri $2 -SkipHttpErrorCheck$3",
            "$0"
        ]
    },
    "CheckStatusCode": {
        "prefix": ["checkreq"],
        "description": "check request http statuscode",
        "body": [
            "if(${1:\\$resp.StatusCode} ${2:-eq} ${3:200}){",
            "    ${4:Write-Host \"request failed\"}",
            "}$0"
        ]
    },
    "Function": {
        "prefix": ["func"],
        "description": "standard function",
        "body": [
            "function $1(){",
            "    $0",
            "}"
        ]
    },
    "FunctionParam": {
        "prefix": ["funcparam"],
        "description": "standard function",
        "body": [
            "function $1(){",
            "    Param(",
            "         $0",
            "    )",
            "}"
        ]
    },
    "FunctionParameters": {
        "prefix": ["param"],
        "description": "standard function",
        "body": [
            "Param(",
            "    $1",
            ")",
            "$0"
        ]
    },
    "MandatoryParameter": {
        "prefix": ["mandatory"],
        "description": "mandatory parameter",
        "body": [
            "[Parameter(Mandatory)]\\$$1${2:,}",
            "$0"
        ]
    }
}
